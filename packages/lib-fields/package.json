  "devDependencies": {
    "@payloadcms/ui": "^3.74.0",
    "@types/react": "^19.2.12",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@x3m-industries/lib-eslint": "workspace:*",
    "@x3m-industries/lib-testing": "workspace:*",
    "@x3m-industries/lib-tsconfig": "workspace:*",
    "eslint": "^9.39.2",
    "graphql": "^16.12.0",
    "payload": "^3.74.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "@payloadcms/ui": "*",
    "payload": "*",
    "react": "^18.0.0 || ^19.0.0",
