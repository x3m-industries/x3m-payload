    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^3.3.0",
    "countries-list": "^3.2.2",
    "jsvat": "^2.5.4",
