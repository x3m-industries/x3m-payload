{
  "name": "@x3m-industries/lib-fields",
  "version": "2.1.3",
  "description": "A collection of reusable Payload CMS fields.",
  "keywords": [
    "payload",
    "fields",
    "reusable"
  ],
  "homepage": "https://github.com/x3m-industries/x3m-payload/tree/main/packages/lib-fields#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x3m-industries/x3m-payload.git",
    "directory": "packages/lib-fields"
  },
  "license": "MIT",
  "author": "X3M Industries <info@x3m.industries>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs",
      "default": "./dist/client.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -Rf .turbo dist",
    "coverage": "vitest run --coverage",
